<h1>New Projects</h1>
<%= link_to "New Project", new_project_path %>
<div id="projects">
	<% @projects.each do |project| %>
	<h2><%= link_to project.name, project %></h2>
	<p><%= project.description %></p>
	<p><%= link_to "Edit Project", edit_project_path(project) %></p>
	<p><%= link_to "Delete Project", project_path(project), method: :delete, data: {confirm: "Are you sure you want to delete this project?"} %></p>
	<% end %>
</div>